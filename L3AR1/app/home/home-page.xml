<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:svg="nativescript-svg">

    <ActionBar>
        <GridLayout rows="*" columns="*,*,*">
            <Button text="AddArg" class="btn action-bar" tap="addArg" row="0" col="0" horizontalAlignment="center" verticalAlignment="center" />
            <Button text="Clear" class="btn action-bar" tap="suppArg" row="0" col="1" horizontalAlignment="center" verticalAlignment="center" />
            <Button text="OK" class="btn action-bar" tap="validateGraph" row="0" col="2" horizontalAlignment="center" verticalAlignment="center" />
        </GridLayout>
    </ActionBar>
    <GridLayout id="border">
        <AbsoluteLayout width="100%" height="100%" id="AF" pinch="zoom"></AbsoluteLayout>
    </GridLayout>
</Page>